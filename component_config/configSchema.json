{
  "type": "object",
  "title": "Credentials and settings",
  "required": [
    "credentials",
    "settings"
  ],
  "properties": {
    "settings": {
      "type": "object",
      "title": "Settings",
      "required": [
        "message_type",
        "sender_id",
        "viber"
      ],
      "properties": {
        "message_type": {
          "enum": [
            "Transactional",
            "Promotional"
          ],
          "type": "string",
          "title": "Message type",
          "propertyOrder": 1
        },
        "sender_id": {
          "type": "string",
          "title": "Sender ID",
          "propertyOrder": 2
        },
        "viber": {
          "type": "boolean",
          "title": "Send to Viber?",
          "propertyOrder": 3
        },
        "viber_sender": {
          "type": "string",
          "title": "Viber sender",
          "propertyOrder": 4
        }
      },
      "propertyOrder": 2
    },
    "credentials": {
      "type": "object",
      "title": "Credentials",
      "required": [
        "#application_id",
        "#application_token"
      ],
      "properties": {
        "#application_id": {
          "type": "string",
          "title": "Application ID",
          "format": "password",
          "propertyOrder": 1
        },
        "#application_token": {
          "type": "string",
          "title": "Application token",
          "format": "password",
          "propertyOrder": 2
        }
      },
      "propertyOrder": 1
    }
  },
  "description": "Set-up credentials and market settings."
}